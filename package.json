{
  "name": "nestjs-asyncapi",
  "version": "1.1.1",
  "description": "NestJS AsyncAPI module - generate the documentation of your event-based services using decorators",
  "author": "Ilya Moroz",
  "license": "MIT",
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/flamewow/nestjs-asyncapi"
  },
  "validate-branch-name": {
    "pattern": "^(main|dev){1}$|^(feat|fix|release|test|refactor|docs|perf|style|chore)/.+$",
    "errorMsg": "The branch name isn't valid."
  },
  "keywords": [
    "asyncapi",
    "nest",
    "nestjs",
    "swagger",
    "openapi",
    "documentation",
    "socket.io",
    "websockets",
    "pubsub",
    "microservices"
  ],
  "dependencies": {
    "@asyncapi/generator": "1.10.9",
    "@asyncapi/html-template": "0.28.3",
    "js-yaml": "4.1.0",
    "reflect-metadata": "0.1.13"
  },
  "devDependencies": {
    "@nestjs/common": "^10.0.3",
    "@nestjs/core": "^10.0.3",
    "@nestjs/swagger": "^7.0.4",
    "@nestjs/websockets": "^10.0.3",
    "@nestjs/cli": "10.0.3",
    "@nestjs/microservices": "10.0.3",
    "@nestjs/platform-express": "10.0.3",
    "@nestjs/platform-fastify": "10.0.3",
    "@nestjs/platform-socket.io": "10.0.3",
    "@nestjs/schematics": "10.0.1",
    "@nestjs/testing": "10.0.3",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.2",
    "@types/js-yaml": "4.0.5",
    "@types/node": "20.3.1",
    "@types/supertest": "2.0.12",
    "@types/url-join": "4.0.1",
    "@typescript-eslint/eslint-plugin": "5.60.0",
    "@typescript-eslint/parser": "5.60.0",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.2.2",
    "prettier": "2.8.8",
    "release-it": "15.11.0",
    "socket.io": "4.7.0",
    "socket.io-client": "4.7.0",
    "supertest": "6.3.3",
    "ts-jest": "29.1.0",
    "ts-loader": "9.4.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.3"
  },
  "config": {
    "puppeteer_skip_chromium_download": true
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "prepare": "husky install",
    "format": "prettier --write \"lib/**/*.{js,ts,json}\"  \"e2e/**/*.{js,ts,json}\"",
    "lint": "eslint --fix \"lib/**/*.ts\"  \"sample/**/*.ts\" \"test/**/*.ts\"",
    "prestart": "npm install && npm run build",
    "make:snapshots": "bash misc/take-snaphots.sh",
    "---execution---": "",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --watch --debug",
    "---tests---": "",
    "test:e2e": "jest --runInBand --config test/configs/jest-e2e.config.ts",
    "---npm---": "",
    "publish:next": "npm publish --access public --tag next",
    "publish:beta": "npm publish --access public --tag beta",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prerelease": "npm run build",
    "release": "release-it"
  }
}
